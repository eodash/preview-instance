{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/types",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "DOM.Iterable"]
  },
  "include": ["./src/**/*.js"],
  "exclude": ["node_modules", ".eodash"]
}
